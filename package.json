{
  "name": "file-bookmark",
  "repository": {
    "type": "git",
    "url": "https://github.com/rfirefly/File-Bookmark.git"
  },
  "publisher": "rfirefly",
  "displayName": "File Bookmark",
  "description": "Quickly access important folders and files",
  "icon": "docs/icon.png",
  "version": "1.0.3",
  "engines": {
    "vscode": "^1.79.1"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "explorer",
    "folder",
    "bookmark",
    "file",
    "focus",
    "manager",
    "finder",
    "drawer"
  ],
  "activationEvents": [
    "onView:file-bookmark",
    "onCommand:file-bookmark.selectItem"
  ],
  "main": "./out/main.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "file-bookmark",
        "contents": "Right click and add a file or folder"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "file-bookmark",
          "name": "File Bookmark"
        }
      ]
    },
    "commands": [
      {
        "command": "file-bookmark.refreshEntry",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "file-bookmark.selectItem",
        "title": "Add to File Bookmark"
      },
      {
        "command": "file-bookmark.removeItem",
        "title": "Remove from File Bookmark",
        "icon": "$(close)"
      },
      {
        "command": "file-bookmark.removeAllItems",
        "title": "Remove All Items",
        "icon": "$(trash)"
      },
      {
        "command": "file-bookmark.cantRemoveItemMsg",
        "title": "Remove from File Bookmark"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "file-bookmark.refreshEntry",
          "when": "view == file-bookmark",
          "group": "navigation"
        },
        {
          "command": "file-bookmark.removeAllItems",
          "when": "view == file-bookmark",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "file-bookmark.selectItem"
        }
      ],
      "view/item/context": [
        {
          "command": "file-bookmark.removeItem",
          "when": "view == file-bookmark && viewItem == directlySavedItem"
        },
        {
          "command": "file-bookmark.removeItem",
          "when": "view == file-bookmark && viewItem == directlySavedItem",
          "group": "inline"
        },
        {
          "command": "file-bookmark.cantRemoveItemMsg",
          "when": "view == file-bookmark && viewItem != directlySavedItem"
        }
      ]
    },
    "configuration": {
      "title": "File Bookmark",
      "properties": {
        "file-bookmark.saveWorkspace": {
          "type": "boolean",
          "default": true,
          "description": "Save the current explorer view when closing VS Code"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run esbuild-base -- --sourcemap --watch",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.5",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.3.1",
    "@types/vscode": "^1.79.1",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "esbuild": "^0.18.17",
    "eslint": "^8.43.0",
    "glob": "^10.3.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "vscode-test": "^1.5.0"
  }
}
